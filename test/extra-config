users.users.vagrant =
{
  isNormalUser = true;
  home = "/home/vagrant";
  createHome = true;
};

system.activationScripts =
{
  vagrant =
  {
    deps = [];
    text =
    ''
      cp -rf /home/vagrant/.ssh /home/vagrant/
      chown -R vagrant:users /home/vagrant
    '';
  };
};

services.openssh =
{
  enable = true;
  forwardX11 = false;
  permitRootLogin = "no";
  ports = [22];
};
networking.firewall.allowedTCPPorts = [ 22 ];
